<assembly>
    <!--配置添加到打包文件名的标识符，用来做后缀-->
    <id>bin</id>
    <!--配置打包文件格式，有zip、tar、tar.gz、tar.bz2、jar、war-->
    <formats>
        <format>tar.gz</format>
    </formats>
    <!---->
    <includeBaseDirectory>false</includeBaseDirectory>
    <files>
        <file>
            <source>${project.build.directory}/${project.artifactId}-${project.version}.jar</source>
            <outputDirectory>demo/</outputDirectory>
            <destName>demo.jar</destName>
        </file>
    </files>
    <dependencySets>
        <dependencySet>
            <outputDirectory>demo/lib</outputDirectory>
            <useProjectArtifact>true</useProjectArtifact>
            <unpack>false</unpack>
            <scope>runtime</scope>
        </dependencySet>
    </dependencySets>
</assembly>
